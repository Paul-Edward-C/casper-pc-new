{{#match @custom.publication_cover_style "!=" "None"}}
    <div class="site-header-content{{#match @custom.publication_cover_style "Large"}} large{{/match}}">
        {{#if @site.cover_image}}
            {{!-- This is a responsive image, it loads different sizes depending on device
            https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
            <img class="site-header-cover"
                srcset="{{img_url @site.cover_image size="s"}} 300w,
                        {{img_url @site.cover_image size="m"}} 600w,
                        {{img_url @site.cover_image size="l"}} 1000w,
                        {{img_url @site.cover_image size="xl"}} 2000w"
                sizes="100vw"
                src="{{img_url @site.cover_image size="s"}}"
                alt=""
            />
        {{/if}}
        <h1 class="site-title">
            {{#if @site.logo}}
                <img class="site-logo" src="{{img_url @site.logo size="m"}}" alt="{{@site.title}}" />
            {{else}}
                {{@site.title}}
            {{/if}}
        </h1>
    </div>
{{/match}}

<main id="site-main" class="site-main outer">

  <div class="outer">
    {{#page}}
    <article class="post-full {{post_class}} no-image">
      <section class="post-full-content">
        <div class="post-content">
          <br>
          <h1 class="post-title" style="font-weight: bold; font-family: Georgia;">Welcome</h1>
          <style>
            .centeralign {
              text-align: center;
              font-weight: bold;
              margin: 0px auto 0px auto;
              padding: 5px;
              background-color: rgba(52, 183, 67, 0.12);
            }
          </style>
          <p class="centeralign">These are the most recent posts. Please sign up and get in contact for access to all the comments and interactive charts on the site</p>
          <hr style="color: green;">
        </div>
      </section>
    </article>
    {{/page}}
  </div>

  {{#get "posts" filter="tag:hash-all" limit="12"}}
<div class="inner posts">
    <div class="post-feed">
        {{#foreach posts}}
            <div class="post-card">
                <h2>{{title}}</h2>
                <p>{{excerpt words="30"}} <!-- Adjust the number of words as needed --></p>
                <div class="post-meta" style="margin-top: auto;">
                    <span class="post-date" style="color: #555; font-size: 14px; margin-bottom: 4px;">{{date format="MMM D, YYYY"}}</span>
                    <span class="post-read-time" style="color: #555; font-size: 14px;">{{reading_time}}</span>
                </div>
            </div>
        {{/foreach}}
    </div>
</div>

{{/get}}

  <script src="https://cdn.bokeh.org/bokeh/release/bokeh-2.4.3.min.js" crossorigin="anonymous"></script>
  <script src="https://cdn.bokeh.org/bokeh/release/bokeh-widgets-2.4.3.min.js" crossorigin="anonymous"></script>
  <script src="https://cdn.bokeh.org/bokeh/release/bokeh-tables-2.4.3.min.js" crossorigin="anonymous"></script>
  <script src="https://cdn.bokeh.org/bokeh/release/bokeh-gl-2.4.3.min.js" crossorigin="anonymous"></script>
  <script src="https://cdn.bokeh.org/bokeh/release/bokeh-mathjax-2.4.3.min.js" crossorigin="anonymous"></script>

  <h2 class="post-title" style="font-weight: bold">Charts</h2>

  <div class="outer">
    <h3 class="post-title" style="font-weight: bold">Cycle</h3>
    <div id="region_cycle"></div>
    <h3 class="post-title" style="font-weight: bold">Structure</h3>
    <div id="region_structure"></div>
  </div>

  <div class="outer">
    {{#page}}
    <article class="post-full {{post_class}} no-image">
      <section class="post-full-content">
        <div class="post-content">
          {{content}}
        </div>
      </section>
    </article>
    {{/page}}
  </div>
</main>

