{{!< default}}

<style>
.post-feed {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 3 columns for big cards */
    gap: 40px;
    padding: 40px 0 0;
}
.post-card {
    padding: 32px;
    border: 1px solid #ddd;
    background: #fff;
    /* You can add box-shadow or border-radius if you use it in your version */
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    border-radius: 6px;
}
.section-feed {
    margin-bottom: 56px;
}
</style>

<div id="site-main" class="site-main outer">
    <main id="site-main" class="site-main outer">
        <div class="outer">
            <article class="post-full no-image">
                <section class="post-full-content">
                    <div class="post-content">
                        <h1 class="post-title" style="font-weight: bold">Sample Articles for Subscribers</h1>
                        <p>Explore public samples from each section</p>
                    </div>
                </section>
            </article>
        </div>

        {{!-- Daily --}}
        <section class="home-section">
            <h2>Daily</h2>
            <div class="post-feed section-feed">
                {{#get "posts" filter="slug:[east-asia-today-16, east-asia-today-9, east-asia-today-4]+visibility:public" limit="3"}}
                    {{#foreach posts}}
                        {{> "post-card"}}
                    {{/foreach}}
                {{/get}}
            </div>
        </section>

        {{!-- Daily + Data --}}
        <section class="home-section">
            <h2>Daily + Data</h2>
            <div class="post-feed section-feed">
                {{#get "posts" filter="slug:[daily-data-post-1,daily-data-post-2,daily-data-post-3]+visibility:public" limit="3"}}
                    {{#foreach posts}}
                        {{> "post-card"}}
                    {{/foreach}}
                {{/get}}
            </div>
        </section>

        {{!-- Cycle Update --}}
        <section class="home-section">
            <h2>Cycle Update</h2>
            <div class="post-feed section-feed">
                {{#get "posts" filter="slug:[cn-activity-aug-25, jp-boj-outlook-jul-25,korea-bsi-mar-25]+visibility:public" limit="3"}}
                    {{#foreach posts}}
                        {{> "post-card"}}
                    {{/foreach}}
                {{/get}}
            </div>
        </section>

        {{!-- Taking Stock --}}
        <section class="home-section">
            <h2>Taking Stock</h2>
            <div class="post-feed section-feed">
                {{#get "posts" filter="slug:[taking-stock-post-1,taking-stock-post-2,taking-stock-post-3]+visibility:public" limit="3"}}
                    {{#foreach posts}}
                        {{> "post-card"}}
                    {{/foreach}}
                {{/get}}
            </div>
        </section>

        {{!-- Structural --}}
        <section class="home-section">
            <h2>Thematic</h2>
            <div class="post-feed section-feed">
                {{#get "posts" filter="slug:[cn-cny-aug-25,region-plaza-ii,taiwan-how-to-dispose-of-usd100bn]+visibility:public" limit="3"}}
                    {{#foreach posts}}
                        {{> "post-card"}}
                    {{/foreach}}
                {{/get}}
            </div>
        </section>
    </main>
</div>