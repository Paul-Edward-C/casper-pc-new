  --ea-sans: -apple-system,BlinkMacSystemFont,"Segoe UI","Roboto","Oxygen","Ubuntu","Cantarell","Fira Sans","Droid Sans","Helvetica Neue",sans-serif;
}

/* =======================
   Post labels
   ======================= */
.post-card .post-label,
.post-card-labels .post-label{
  display:inline-block;
  padding:5px 10px;
  font: bold 14px/1 var(--ea-serif);
  background:#fff;
  border:2px solid var(--ea-green);
  border-radius:5px;
  color:var(--ea-green);
  margin:0 0 8px;
}
.post-card-labels{ text-align:left; margin:0 0 8px; }

/* Hide legacy image link; use inline image */
.post-card > .post-card-image-link{ display:none; }
.post-card .post-card-image-inline img{
  width:100%; height:auto; display:block; margin:8px 0 12px; border-radius:4px;
}

/* =======================
   Menu buttons
   ======================= */
.menu-item{
  display:inline-block;
  margin:10px 5px;
  font: bold 16px/1 var(--ea-sans);
  color:#fff; text-decoration:none;
  padding:2px 15px;
  border-radius:5px;
  background:var(--ea-green);
  transition:background-color .3s ease;
  text-align:center;
  width:150px;
}
.menu-item:hover{ background:var(--ea-green-70); }

/* =======================
   Intro (photo + text box)
   ======================= */
.about-wrap{ display:flex; gap:28px; align-items:flex-start; flex-wrap:wrap; }
.about-figure{ margin:0; flex:0 0 auto; }
.about-photo{
  width:clamp(280px,30vw,420px);
  aspect-ratio:1/1;
  object-fit:cover;
  border-radius:12px;
  box-shadow:0 4px 14px rgba(0,0,0,.08);
}

/* Tightened bottom padding to reduce green space under buttons */
.about-box{
  flex:1 1 520px;
  background:var(--ea-accent-bg);
  border:2px solid #000;
  font-family:var(--ea-serif);
  padding: min(2rem,5vw) min(2rem,5vw) min(.5rem,1.25vw); /* top / sides / bottom */
  margin:0 auto;
}
.about-box p{ margin:0 0 .8rem; }

/* Buttons row inside the intro box */
.about-cta{ margin:.5em 0 0; }        /* a little space above, none below */
.about-box > :last-child{ margin-bottom:0; }  /* trim any trailing gap */

/* Pill buttons (Contact / Sign Up) */
.btn-pill{
  display:inline-flex; align-items:center; justify-content:center;
  background:var(--ea-green);
  color:#fff !important; text-decoration:none !important;
  font:600 1rem/1.2 var(--ea-serif);
  border-radius:6px; padding:.65em 20px; margin:0 10px;
  min-height:40px; white-space:nowrap; border:0;
}
.btn-pill:hover{ background:rgba(16,75,31,.85); }

/* Space above the whole intro block */
#intro .about-wrap{ margin-top: clamp(24px, 6vh, 96px); }  /* ~24–96px */

/* =======================
   Section dividers
   ======================= */
.ea-divider{
  width:min(1100px, 92%);
  margin:24px auto 48px;
  border:0; height:2px; border-radius:2px;
  background:linear-gradient(to right, transparent, var(--ea-green-45), transparent);
}

#intro .about-cta{
  display:flex;                     /* lay out the two buttons */
  justify-content:center;
  gap:12px;
  margin:.5em 0 0;                  /* small space above, none below */
  padding:0;
}

#intro .btn-pill{
  font-size:1.1rem;                 /* bigger text */
  line-height:1.2;
  padding:.75em 22px;               /* taller/wider button */
  min-height:44px;
  min-width:170px;                  /* consistent “box” width */
}

/* --- Remove the extra green space at the bottom of the intro box --- */
#intro .about-box{
  padding-bottom:6x !important;      /* no bottom padding */
}

#intro .about-box > :last-child{
  margin-bottom:0 !important;       /* the CTA paragraph adds no bottom margin */
}

/* In case your theme adds spacing to gh-content descendants */
#intro .about-box.gh-content > *:last-child{
  margin-bottom:0 !important;
}

/* =======================
   Blurb spacing (one line)
   ======================= */
#daily .daily-blurb,
#daily-data .daily-blurb,
#cycle-update .daily-blurb,
#taking-stock .daily-blurb,
#thematic .daily-blurb,
#weekly .daily-blurb { margin:0 0 1em; }
#daily .daily-blurb p,
#daily-data .daily-blurb p,
#cycle-update .daily-blurb p,
