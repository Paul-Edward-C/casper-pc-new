 {{!< default}}
{{!-- No extra <div id="site-main"> or <main id="site-main"> here --}}

{{#match @custom.publication_cover_style "!=" "None"}}
  <div class="site-header-content{{#match @custom.publication_cover_style "Large"}} large{{/match}}">
    {{#if @site.cover_image}}
      <img class="site-header-cover"
        srcset="{{img_url @site.cover_image size="s"}} 300w,
                {{img_url @site.cover_image size="m"}} 600w,
                {{img_url @site.cover_image size="l"}} 1000w,
                {{img_url @site.cover_image size="xl"}} 2000w"
        sizes="100vw"
        src="{{img_url @site.cover_image size="s"}}"
        alt=""
      />
    {{/if}}
    <h1 class="site-title">
      {{#if @site.logo}}
        <img class="site-logo" src="{{img_url @site.logo size="m"}}" alt="{{@site.title}}" />
      {{else}}Korea{{/if}}
    </h1>
  </div>
{{/match}}

<header class="article-header gh-canvas">
  {{#if feature_image}}
    <figure class="article-image">
      <img
        srcset="{{img_url feature_image size="s"}} 300w,
                {{img_url feature_image size="m"}} 600w,
                {{img_url feature_image size="l"}} 1000w,
                {{img_url feature_image size="xl"}} 2000w"
        sizes="(min-width: 1400px) 1400px, 92vw"
        src="{{img_url feature_image size="xl"}}"
        alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
      />
      {{#if feature_image_caption}}<figcaption>{{feature_image_caption}}</figcaption>{{/if}}
    </figure>
  {{/if}}
</header>

<div class="outer">
  {{#page}}
    <article class="post-full {{post_class}} no-image">
      <section class="post-full-content">
        <div class="post-content">
          <br>
          <h1 class="post-title" style="font-weight: bold">Articles</h1>
        </div>
      </section>
    </article>
  {{/page}}
</div>
<section class="home-section">5
    <h2>Daily</h2>
        <div class="post-feed section-feed">
        {{#get "posts" filter="slug:[east-asia-today-16,east-asia-today-9,east-asia-today-4]" limit="9"}}
        <div class="inner posts">
            <div class="post-feed">
            {{#foreach posts}}
                <article class="post-card {{post_class}}
                {{#match @custom.feed_layout "Classic"}}
                    {{#is "home"}}{{#has index="0"}} post-card-large{{/has}}{{#has index="1,2"}} dynamic{{/has}}{{/is}}
                {{/match}}
                {{#match @custom.feed_layout "Grid"}} keep-ratio{{/match}}
                {{#match @custom.feed_layout "List"}} {{#is "home, paged"}} post-card-large{{/is}} {{/match}}">
                <a class="post-card-content-link" href="{{url}}">
                    <header class="post-card-header">
                    <div class="post-card-content">
                        {{#has visibility="public"}}<span class="post-label">Public Post</span>{{/has}}
                        {{#has visibility="members"}}<span class="post-label">Members Only</span>{{/has}}
                        {{#has visibility="paid"}}<span class="post-label">Paid Member Post</span>{{/has}}
                        {{#has visibility="tiers"}}<span class="post-label">Subscribers Only</span>{{/has}}

                        <h2 class="post-card-title">{{title}}</h2>

                        {{#if feature_image}}
                        <a class="post-card-image-link" href="{{url}}">
                            <img class="post-card-image"
                            srcset="{{img_url feature_image size="s"}} 300w,
                                    {{img_url feature_image size="m"}} 600w,
                                    {{img_url feature_image size="l"}} 1000w,
                                    {{img_url feature_image size="xl"}} 2000w"
                            sizes="(max-width: 1000px) 400px, 800px"
                            src="{{img_url feature_image size="m"}}"
                            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                            loading="lazy"
                            />
                        </a>
                        {{/if}}

                        <p>{{excerpt words="70"}}</p>

                        <footer class="post-card-meta">
                        <time class="post-card-meta-date" datetime="{{date format='YYYY-MM-DD'}}">{{date}}</time>
                        <span class="post-card-meta-length">{{reading_time}}</span>
                        {{#if @site.comments_enabled}}{{comment_count}}{{/if}}
                        </footer>
                    </div>
                    </header>
                </a>
                </article>
            {{/foreach}}
            </div>
        </div>
        {{/get}}
    </div>
</section>
