{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} tag of the default.hbs template --}}


{{#match @custom.publication_cover_style "!=" "None"}}
    <div class="site-header-content{{#match @custom.publication_cover_style "Large"}} large{{/match}}">
        {{#if @site.cover_image}}
            {{!-- This is a responsive image, it loads different sizes depending on device
            https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
            <img class="site-header-cover"
                srcset="{{img_url @site.cover_image size="s"}} 300w,
                        {{img_url @site.cover_image size="m"}} 600w,
                        {{img_url @site.cover_image size="l"}} 1000w,
                        {{img_url @site.cover_image size="xl"}} 2000w"
                sizes="100vw"
                src="{{img_url @site.cover_image size="s"}}"
                alt=""
            />
        {{/if}}
        <h1 class="site-title">
            {{#if @site.logo}}
                <img class="site-logo" src="{{img_url @site.logo size="m"}}" alt="{{@site.title}}" />
            {{else}}
                Taiwan
            {{/if}}
        </h1>
    </div>
{{/match}}

<div id="site-main" class="site-main outer">
{{!-- Everything inside the #post block pulls data from the post --}}
<main id="site-main" class="site-main outer">
    
        <header class="article-header gh-canvas">
            {{#if feature_image}}
            <figure class="article-image">
                {{!-- This is a responsive image, it loads different sizes depending on device
                https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
                <img
                    srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
                    sizes="(min-width: 1400px) 1400px, 92vw"
                    src="{{img_url feature_image size="xl"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                />
                {{#if feature_image_caption}}
                    <figcaption>{{feature_image_caption}}</figcaption>
                {{/if}}
            </figure>
            {{/if}}
        </header>

  <div class="outer">
    {{#page}}
    <article class="post-full {{post_class}} no-image">
      <section class="post-full-content">
        <div class="post-content">
          <br>
          <h1 class="post-title" style="font-weight: bold">Articles</h1>
        </div>
      </section>
    </article>
    {{/page}}
  </div>

    <!-- from post.hbs -->
    
    <!-- get the list of posts -->
{{#get "posts" filter="tag:hash-tw" limit="9"}}
    <div class="inner posts">
        <div class="post-feed">
            {{#foreach posts}}
                <div class="post-card">
                    {{!-- Check if the post has a feature image --}}
                    {{#if feature_image}}
                        <div class="post-card-image">
                            <img src="{{img_url feature_image size="m"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
                        </div>
                    {{/if}}

                    <div class="post-card-content">
                        <h2><a href="{{url}}">{{title}}</a></h2>
                        <p>{{excerpt words="30"}}</p>
                        <div class="post-meta" style="margin-top: auto;">
                            <span class="post-date" style="color: #555; font-size: 14px; margin-bottom: 4px;">{{date format="MMM D, YYYY"}}</span>
                            <span class="post-read-time" style="color: #555; font-size: 14px;">{{reading_time}}</span>
                        </div>

                        {{!-- Additional metadata or elements can be added here --}}
                    </div>
                </div>
            {{/foreach}}
        </div>
    </div>
{{/get}}


